PROJECT_NAME           = "Intel HEXL for FPGA"
PROJECT_BRIEF          = "Intel Homomorphic Encryption FPGA Acceleration Library, accelerating the modular arithmetic operations used in homomorphic encryption."

OUTPUT_DIRECTORY       = @CMAKE_BINARY_DIR@/doc/doxygen
INPUT                  = @CMAKE_SOURCE_DIR@/host/inc \
                         @CMAKE_SOURCE_DIR@/examples \
                         @CMAKE_SOURCE_DIR@/tests \
                         @CMAKE_SOURCE_DIR@/benchmark \
                         @CMAKE_SOURCE_DIR@/README.md \
                         @CMAKE_SOURCE_DIR@/CONTRIBUTING.md \
                         @CMAKE_SOURCE_DIR@/PREREQUISITE.md 
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
USE_MATHJAX            = YES
FULL_PATH_NAMES        = NO

GENERATE_XML           = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
SHOW_NAMESPACES        = YES
GENERATE_LATEX         = YES

WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES
WARN_AS_ERROR          = YES

QUIET                  = NO

SEARCHENGINE           = YES
SERVER_BASED_SEARCH    = NO
